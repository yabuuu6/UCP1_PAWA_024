<!DOCTYPE html>
<html lang="en">
<head>
    <title>Data Kolam Renang</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Data Kolam Renang</h1>
        <a href="/pools/add" class="btn btn-primary mb-3">Tambah Kolam Renang</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Lokasi</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% pools.forEach(pool => { %>
                    <tr>
                        <td><%= pool.id %></td>
                        <td><%= pool.nama %></td>
                        <td><%= pool.tempat_asal %></td>
                        <td><%= pool.harga %></td>
                        <td>
                            <a href="/pools/edit/<%= pool.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/pools/delete/<%= pool.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
